<h2>Weight Metrics</h2>
<%= link_to "New Weight", new_user_weight_path(@user.id) %>
<div class="floating-container-blue form">
    <div class="col-2">
        <h3>Your Weight:</h3>
        <p><%= @user.weight %></p>
    </div>
    <div class="col-2">
        <h3>Goal:</h3>
        <p><%= @user.goal %></p>
    </div>
    <div class="col-2">
        <h3># Of Entries:</h3>
        <p><%= @user.weight_entries_count %></p>
    </div>
    <div class="col-2">
        <h3>Goal is:</h3>
        <p><%=pluralize( @user.distance_to_goal, 'pound') %> away</p>
    </div>
    <div class="col-2">
        <%= link_to "All Entries", user_weights_path(@user) %>
    </div>
    <div class="col-2">
        <h3>B.M.I</h3>
        <p>12.1</p>
    </div>
</div>