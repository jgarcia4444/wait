<div class="container text-center">
    <h2><%= @comment.health_tip_title %></h2>
    <div class="container">
        <h3>Name: <%= @comment.name_of_user %></h3>
        <p>Comment: <%= @comment.content %></p>
    </div>
    <div class="container">
        <h4>Replies:</h4>
        <% @comment.replies.each do |reply| %>
            <h4><%= reply.name_of_user %></h4>
            <p><%= reply.content %></p>
        <% end %>
    </div>
    <div class="container">
        <h4>New Reply:</h4>
        <%= render 'reply_form' %>
    </div>
</div>